{
  "name": "navi-remix",
  "version": "0.1.0",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "remix vite:dev",
    "dev:all": "concurrently \"bun run server\" \"bun run dev\"",
    "server": "bun run server/index.ts",
    "build": "remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "tauri": "tauri",
    "tauri:dev": "concurrently \"bun run server\" \"bun run tauri dev\"",
    "tauri:build": "bun run build && tauri build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.75",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "~2",
    "diff2html": "^3.4.52",
    "highlight.js": "^11.11.1",
    "immer": "^10.1.1",
    "isbot": "^5.1.0",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shiki": "^3.20.0",
    "sql.js": "^1.13.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.0",
    "@tauri-apps/cli": "^2",
    "@types/marked": "^6.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-tsconfig-paths": "^5.1.0"
  }
}
